<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_constraint"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="0dp"
>


        <View
            android:id="@+id/nick_name"
            android:layout_width="255dp"
            android:layout_height="52dp"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="@id/top_constraint"
            app:layout_constraintStart_toStartOf="@id/top_constraint"
            app:layout_constraintTop_toTopOf="@id/top_constraint" />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="84dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/roket_icon"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="@id/top_constraint"
            app:layout_constraintStart_toStartOf="@id/top_constraint"
            app:layout_constraintTop_toTopOf="@id/top_constraint" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rounded_shape"
            app:layout_constraintBottom_toBottomOf="@+id/nick_name"
            app:layout_constraintEnd_toEndOf="@+id/nick_name"
            app:layout_constraintStart_toStartOf="@+id/nick_name"
            app:layout_constraintTop_toTopOf="@+id/nick_name" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick name"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/nick_name"
            app:layout_constraintEnd_toEndOf="@+id/nick_name"
            app:layout_constraintStart_toStartOf="@+id/nick_name"
            app:layout_constraintTop_toTopOf="@+id/nick_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:translationZ="10dp"
        app:layout_constraintTop_toBottomOf="@id/top_constraint">

        <View
            android:id="@+id/xp_bar_view"
            android:layout_width="380dp"
            android:layout_height="29dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xp_bar"
            app:layout_constraintBottom_toBottomOf="@+id/xp_bar_view"
            app:layout_constraintEnd_toEndOf="@+id/xp_bar_view"
            app:layout_constraintStart_toStartOf="@+id/xp_bar_view"
            app:layout_constraintTop_toTopOf="@+id/xp_bar_view"

            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/water_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/xp_bar_view" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:src="@drawable/water_place_xp_bar"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/food_bar_menu"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/food_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/food_place_bar"
            app:layout_constraintBottom_toTopOf="@+id/food_bar_menu"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/sleep_bar_menu"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/sleep_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/food_bar_menu" />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/sleep_place_bar"
            app:layout_constraintBottom_toTopOf="@+id/sleep_bar_menu"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/exercise_bar_menu"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/exercise_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sleep_bar_menu" />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/exercise_place_bar"
            app:layout_constraintBottom_toTopOf="@+id/exercise_bar_menu"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/meds_bar_menu"
            android:layout_width="299dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/meds_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exercise_bar_menu" />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="41dp"
            android:layout_marginStart="70dp"
            android:src="@drawable/exercise_place_bar"
            app:layout_constraintBottom_toTopOf="@+id/meds_bar_menu"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_constraint"
        app:layout_constraintTop_toBottomOf="@+id/top_constraint" >

        <TextView
            android:id="@+id/xp_complement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="XP"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/xp_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/xp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="345"
            android:textColor="@color/white"
            android:textSize="45dp"
            android:translationZ="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/water_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/water_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mid_layout" />

    <ImageView
        android:id="@+id/food_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/food_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/water_icon_id"
        app:layout_constraintStart_toStartOf="@id/water_icon_id"
        app:layout_constraintTop_toBottomOf="@+id/mid_layout" />

    <ImageView
        android:id="@+id/sleep_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/sleep_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/food_icon_id"
        app:layout_constraintTop_toBottomOf="@+id/mid_layout" />

    <ImageView
        android:id="@+id/exercise_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/exercise_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sleep_icon_id"
        app:layout_constraintTop_toBottomOf="@+id/mid_layout" />

    <ImageView
        android:id="@+id/meds_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/meds_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exercise_icon_id"
        app:layout_constraintTop_toBottomOf="@+id/mid_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>